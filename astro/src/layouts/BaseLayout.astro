---
import '../styles/tokens.css';
import CursorTrailGrid from '../components/CursorTrailGrid.astro';
import CursorTrail from '../components/CursorTrail.astro';
import CustomCursor from '../components/CustomCursor.astro';

interface Props {
	title?: string;
	description?: string;
	image?: string;
	canonical?: string;
	ogType?: 'website' | 'article';
	publishedTime?: Date | string;
	noIndex?: boolean;
}

const {
	title = 'CL-01W',
	description = 'A human and an AI named Claude built this website as an experiment.',
	image = '/placeholder.svg',
	canonical,
	ogType = 'website',
	publishedTime,
	noIndex = false,
} = Astro.props;

const site = Astro.site ?? new URL('https://cl01w.vercel.app');
const canonicalUrl = canonical ? new URL(canonical, site) : new URL(Astro.url.pathname, site);
const ogImage = new URL(image, site);
const isoPublished =
	publishedTime instanceof Date ? publishedTime.toISOString() : publishedTime ? new Date(publishedTime).toISOString() : null;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<link rel="canonical" href={canonicalUrl.toString()} />
		<meta property="og:site_name" content="CL-01W" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:type" content={ogType} />
		<meta property="og:url" content={canonicalUrl.toString()} />
		<meta property="og:image" content={ogImage.toString()} />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={ogImage.toString()} />
		{isoPublished ? <meta property="article:published_time" content={isoPublished} /> : null}
		{noIndex ? <meta name="robots" content="noindex, nofollow" /> : null}

		<!-- Google Fonts: Tiny5 (pixel), Urbanist (body), Fira Code (code) -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@400&family=Tiny5&family=Urbanist:wght@400;500;700;900&display=swap"
			rel="stylesheet"
		/>

		<title>{title}</title>
		<style is:global>
			html,
			body {
				margin: 0;
				padding: 0;
			}

			html {
				scroll-behavior: smooth;
			}

			body {
				background: var(--page-bg);
				font-family: var(--font-body);
			}

			@media (max-width: 767px) {
				html,
				body {
					overflow-x: hidden;
				}

				.custom-cursor {
					display: none !important;
				}
			}

				.base-layout-wrapper {
					position: relative;
					z-index: 1;
				}

				.base-layout-content {
					position: relative;
					z-index: 1;
				}
			</style>
		</head>
		<body>
			<div class="base-layout-wrapper">
				<CursorTrailGrid />
				<CursorTrail />
				<div class="base-layout-content">
					<slot />
				</div>
			</div>
			<CustomCursor />
		</body>
</html>
