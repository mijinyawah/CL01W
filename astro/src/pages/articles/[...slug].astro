---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Layout from '../../layouts/Layout.astro';
import { getCollection, getEntry } from 'astro:content';
import ImageBlock from '../../components/ImageBlock.astro';
import Callout from '../../components/Callout.astro';
import VideoEmbed from '../../components/VideoEmbed.astro';
import Lightbox from '../../components/Lightbox.astro';

export const prerender = true;

export async function getStaticPaths() {
	const articles = await getCollection('articles', (e) => !e.data.draft);
	return articles.map((entry) => ({
		params: { slug: entry.slug },
		props: { entry },
	}));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
const slug = entry.slug;
const allArticles = (await getCollection('articles', (e) => !e.data.draft)).sort(
	(a, b) => b.data.date.getTime() - a.data.date.getTime()
);
const currentIndex = allArticles.findIndex((e) => e.slug === slug);
const prev = currentIndex > 0 ? allArticles[currentIndex - 1] : null;
const next = currentIndex >= 0 && currentIndex < allArticles.length - 1 ? allArticles[currentIndex + 1] : null;

function formatDate(d: Date): string {
	const months = ['JAN', 'FEB', 'MAR', 'APR', 'MAY', 'JUN', 'JUL', 'AUG', 'SEP', 'OCT', 'NOV', 'DEC'];
	return `${months[d.getMonth()]} ${d.getDate()} | ${d.getFullYear()}`;
}
---

<BaseLayout
	title={entry.data.title}
	description={entry.data.summary}
	ogType="article"
	publishedTime={entry.data.date}
>
	<Layout>
		<article class="article">
			<header class="article__header">
				<div class="article__meta">
					<span class="article__pill">{formatDate(entry.data.date)}</span>
					<span class="article__pill">{entry.data.category}</span>
					<span class="article__pill">{entry.data.type}</span>
				</div>
				<h1 class="article__title">{entry.data.title}</h1>
				<div class="article__byline">
					{entry.data.authors.map((author) => (
						<div class="article__author">
							<span class="article__author-name">{author.name}</span>
							<span class="article__author-role">{author.role}</span>
						</div>
					))}
				</div>
			</header>

			<div class="article__body">
				<Content
					components={{
						ImageBlock,
						Callout,
						VideoEmbed,
					}}
				/>
			</div>
			<Lightbox />

			<footer class="article__footer">
				<div class="article__meta">
					<a href="/articles/" class="article__pill">{entry.data.category}</a>
					<a href="/articles/" class="article__pill">{entry.data.type}</a>
				</div>
				<nav class="article__nav" aria-label="Article navigation">
					{prev ? (
						<a class="article__nav-link" href={`/articles/${prev.slug}/`}>prev</a>
					) : (
						<span class="article__nav-link article__nav-link--placeholder" aria-hidden="true" />
					)}
					{next ? (
						<a class="article__nav-link" href={`/articles/${next.slug}/`}>next</a>
					) : (
						<span class="article__nav-link article__nav-link--placeholder" aria-hidden="true" />
					)}
				</nav>
			</footer>
		</article>
	</Layout>
</BaseLayout>

<style>
	.article {
		padding: 0 0 40px;
	}

	.article__header {
		padding: 0 50px 32px;
	}

	.article__meta {
		display: flex;
		flex-wrap: wrap;
		gap: 0;
		margin-bottom: 12px;
	}

	.article__pill {
		font-family: var(--font-eyebrow);
		font-weight: 700;
		font-size: var(--text-eyebrow-size);
		line-height: var(--text-eyebrow-line);
		letter-spacing: var(--text-eyebrow-letter);
		text-transform: uppercase;
		color: var(--meta-text);
		border: 0.5px solid var(--meta-border);
		padding: 0 8px;
	}

	.article__title {
		font-family: var(--font-pixel);
		font-size: var(--text-pixel-jumbo-size);
		line-height: var(--text-pixel-jumbo-line);
		color: var(--content-title);
		margin: 0 0 24px;
	}

	.article__byline {
		display: flex;
		flex-wrap: wrap;
		gap: 30px;
	}

	.article__author {
		display: flex;
		flex-direction: column;
	}

	.article__author-name {
		font-family: var(--font-body);
		font-size: var(--text-special-02-bold-size);
		line-height: var(--text-special-02-bold-line);
		color: var(--meta-text);
	}

	.article__author-role {
		font-family: var(--font-body);
		font-size: var(--text-special-02-size);
		line-height: var(--text-special-02-line);
		letter-spacing: var(--text-special-02-letter);
		text-transform: uppercase;
		color: var(--content-body);
	}

	.article__body {
		font-family: var(--font-body);
	}

	.article__body :global(h2) {
		font-family: var(--font-body);
		font-weight: 700;
		font-size: var(--text-h2-size);
		line-height: var(--text-h2-line);
		letter-spacing: var(--text-h2-letter);
		color: var(--content-heading);
		padding: 0 50px;
		margin: 32px 0 16px;
	}

	.article__body :global(p) {
		font-weight: 400;
		font-size: var(--text-body-size);
		line-height: var(--text-body-line);
		letter-spacing: var(--text-body-letter);
		color: var(--content-body);
		padding: 0 50px;
		max-width: var(--content-max);
		margin: 0 0 16px;
	}

	.article__body :global(pre) {
		background: var(--codeblock-bg);
		border-radius: var(--radius-container);
		padding: 35px 23px;
		margin: 24px 50px;
		overflow-x: auto;
		font-family: var(--font-code);
		font-size: var(--text-code-size);
		line-height: var(--text-code-line);
		color: var(--text-code);
	}

	.article__body :global(code) {
		font-family: var(--font-code);
		font-size: var(--text-code-size);
		line-height: var(--text-code-line);
		color: var(--text-code);
	}

	.article__body :global(img) {
		cursor: pointer;
	}

	.article__footer {
		display: flex;
		justify-content: space-between;
		align-items: center;
		flex-wrap: wrap;
		gap: 24px;
		padding: 40px 50px 0;
		border-top: 1px solid var(--snippet-border);
		margin-top: 40px;
	}

	.article__nav {
		display: flex;
		justify-content: space-between;
		align-items: center;
		gap: 16px;
		width: 100%;
		max-width: var(--content-max);
		margin: 0 auto;
	}

	.article__pill {
		text-decoration: none;
	}

	.article__pill:hover {
		text-decoration: underline;
	}

	.article__nav-link--placeholder {
		visibility: hidden;
		pointer-events: none;
		width: 0;
		overflow: hidden;
	}

	.article__nav-link {
		font-family: var(--font-pixel);
		font-size: var(--text-pixel-jumbo-size);
		line-height: var(--text-pixel-jumbo-line);
		color: var(--content-title);
		text-decoration: none;
	}

	.article__nav-link:hover {
		text-decoration: underline;
	}

	.article__nav-link--disabled {
		opacity: 0.4;
		cursor: default;
		pointer-events: none;
	}

	@media (max-width: 1199px) and (min-width: 768px) {
		.article__nav-link {
			font-size: var(--text-pixel-mini-size);
			line-height: var(--text-pixel-mini-line);
		}
	}

	@media (max-width: 767px) {
		.article__nav {
			max-width: none;
			padding: 0 clamp(16px, 6vw, 24px);
		}

		/* Same padding logic as main layout: more space from top to content, more between header and body */
		.article {
			padding-top: 40px;
		}

		.article__header {
			padding: 0 clamp(16px, 6vw, 24px) 48px;
		}

		.article__title {
			font-size: var(--text-pixel-h1-mobile-size);
			line-height: var(--text-pixel-h1-mobile-line);
		}

		.article__body :global(h2) {
			padding: 0 clamp(16px, 6vw, 24px);
		}

		.article__body :global(p) {
			padding: 0 clamp(16px, 6vw, 24px);
			max-width: none;
		}

		.article__body :global(pre) {
			margin: 24px clamp(16px, 6vw, 24px);
			max-width: calc(100% - (2 * clamp(16px, 6vw, 24px)));
			overflow-x: auto;
		}

		.article__footer {
			padding: 40px clamp(16px, 6vw, 24px) 0;
		}
	}
</style>
