---
interface Props {
	align: 'left' | 'right';
	heading: string;
}

const { align, heading } = Astro.props;
---

<div class="two-column" data-align={align}>
	{align === 'left' ? (
		<>
			<h2 class="two-column__heading">{heading}</h2>
			<div class="two-column__text">
				<slot />
			</div>
		</>
	) : (
		<>
			<div class="two-column__text">
				<slot />
			</div>
			<h2 class="two-column__heading">{heading}</h2>
		</>
	)}
</div>

<style>
	.two-column {
		display: flex;
		gap: 20px;
		align-items: flex-start;
		max-width: 670px;
		margin: 0 50px;
	}

	.two-column[data-align='right'] {
		flex-direction: row-reverse;
	}

	.two-column__heading {
		font-family: var(--font-body);
		font-weight: 500;
		font-size: 28px;
		line-height: 32px;
		color: var(--content-heading);
		margin: 0;
		flex-shrink: 0;
	}

	.two-column__text {
		font-family: var(--font-body);
		font-weight: 400;
		font-size: 17px;
		line-height: 28px;
		color: var(--content-body);
		flex-grow: 1;
	}

	.two-column__text :global(p) {
		margin: 0;
	}
</style>
