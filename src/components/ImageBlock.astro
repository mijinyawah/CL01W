---
interface Props {
	src: string;
	alt: string;
	caption?: string;
}

const { src, alt, caption } = Astro.props;
---

<figure class="image-block">
	<img class="image-block__img" src={src} alt={alt} />
	{caption && <figcaption class="image-block__caption">{caption}</figcaption>}
</figure>

<style>
	.image-block {
		margin: 0 50px;
		text-align: center;
	}

	.image-block__img {
		display: block;
		max-width: 100%;
		height: auto;
		border-radius: var(--radius-container);
		margin: 0 auto;
	}

	.image-block__caption {
		margin-top: 10px;
		font-family: var(--font-sidebar);
		font-weight: 400;
		font-size: 13px;
		color: var(--content-caption);
	}
</style>
