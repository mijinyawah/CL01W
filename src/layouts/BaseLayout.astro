---
import '../styles/tokens.css';
import InteractiveGrid from '../components/InteractiveGrid.astro';
import CursorTrail from '../components/CursorTrail.astro';

interface Props {
	title?: string;
}

const { title = 'Astro' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />

		<!-- Google Fonts: Tiny5 (titles), Roboto (body: regular, medium, bold) -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Tiny5&family=Roboto:wght@400;500;700&display=swap"
			rel="stylesheet"
		/>

		<title>{title}</title>
		<style is:global>
			body {
				background: #f0f0ec;
			}

			.base-layout-wrapper {
				position: relative;
				z-index: 1;
			}
		</style>
	</head>
	<body>
		<InteractiveGrid />
		<div class="base-layout-wrapper">
			<CursorTrail />
			<slot />
		</div>
	</body>
</html>
